function truncate(str, num) {
  var numCount = num - 3;
  if (num <= 3){
    str = str.slice(0, num) + "...";
  } else if(num === str.length){
    return str;
  } else if(num > str.length) {
    return str;
  }
  else{
    var str2 = str.slice(0, numCount);
    str = str2 + "...";
  }
  
  return str;
}

truncate("A-tisket a-tasket A green and yellow basket", "A-tisket a-tasket A green and yellow basket".length + 2);
